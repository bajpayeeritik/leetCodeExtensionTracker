{
  "manifest_version": 3,
  "name": "Coding Platform Session Tracker",
  "version": "1.0.0",
  "description": "Tracks session lifecycle events on coding platform pages like LeetCode and GFG",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.leetcode.com/*",
    "*://*.geeksforgeeks.org/*",
    "*://*.hackerrank.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.leetcode.com/problems/*",
        "*://*.geeksforgeeks.org/problems/*",
        "*://*.hackerrank.com/challenges/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Session Tracker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
